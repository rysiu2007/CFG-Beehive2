<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CFG_Beehive.MainPage">
    <StackLayout BackgroundColor="Orange">
        <Frame BackgroundColor="DarkOrange" CornerRadius="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Label Text="CFG Beehive" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36" FontFamily="Pricedown" HorizontalOptions="Center" Grid.ColumnSpan="2"/>
                <Button x:Name="Menu" Clicked="Menu_Clicked" FontSize="23" Text="|||" Rotation="90" VerticalOptions="FillAndExpand" HorizontalOptions="Fill"  BackgroundColor="#E88000" CornerRadius="5" Grid.Column="1"/>
            </Grid>
        </Frame>
        <ScrollView>
            <StackLayout x:Name="parent">
               
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
